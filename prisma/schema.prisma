// Prisma schema for URL shortener
// Using PostgreSQL (Neon) for production

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Link {
  id           Int       @id @default(autoincrement())
  code         String    @unique
  url          String
  totalClicks  Int       @default(0)
  lastClicked  DateTime?
  createdAt    DateTime  @default(now())
}
